      "short_name": "Tracker",
      "description": "View and complete your daily habits",
      "url": "/tracker?utm_source=pwa_shortcut",
      "icons": [
        {
          "src": "/icons/shortcut-tracker.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Add New Habit",
      "short_name": "Add Habit",
      "description": "Browse suggestions and add new habits",
